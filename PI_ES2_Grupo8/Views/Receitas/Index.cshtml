@model IEnumerable<PI_ES2_Grupo8.Models.Receita>

@{
    ViewData["Title"] = "Lista Receitas";
}

<h2>Lista Receitas</h2>

<p>
    <a asp-action="Create">Criar Receita</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.medico)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.utente)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.date)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.medico.MedicoId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.utente.UtenteId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.date)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ReceitaId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.ReceitaId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.ReceitaId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
