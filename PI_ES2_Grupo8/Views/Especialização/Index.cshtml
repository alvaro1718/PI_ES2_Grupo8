@model IEnumerable<PI_ES2_Grupo8.Models.Especialização>

@{
    ViewData["Title"] = "Index";
}

<h2>Especialização </h2>
@if (User.IsInRole("Administrator"))
{
    <p>
        <a asp-action="Create">Criar Novo</a>
    </p>
}
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Nome)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Nome)
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.EspecializaçãoId" class="btn btn-default">Editar</a> |
                        <a asp-action="Details" asp-route-id="@item.EspecializaçãoId" class="btn btn-default">Detalhes</a> |
                        <a asp-action="Delete" asp-route-id="@item.EspecializaçãoId" class="btn btn-default">Eliminar</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
