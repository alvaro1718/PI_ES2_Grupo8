@model PI_ES2_Grupo8.Models.HorarioTrabalho

@{
    ViewData["Title"] = "Detalhes";
}

<h2>Detalhes do horário</h2>

<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Data
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Data)
        </dd>
        <dt>
           Hora Inicio
        </dt>
        <dd>
            @Html.DisplayFor(model => model.HoraInicio)
        </dd>
        <dt>
           Hora Fim
        </dt>
        <dd>
            @Html.DisplayFor(model => model.HoraFim)
        </dd>
        <dt>
            Nome
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Enfermeiros.Nome)
        </dd>
        <dt>
           Troca
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Troca)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.HorarioTrabalhoId" class="btn btn-default" >Editar</a> |
    <a asp-action="Index" class="btn btn-default" >Voltar a lista</a>
</div>
