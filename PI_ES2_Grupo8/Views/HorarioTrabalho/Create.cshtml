@model PI_ES2_Grupo8.Models.HorarioTrabalho

@{
    ViewData["Title"] = "Create";
}

<h2>Gerar Horários Para os Enfermeiros</h2>

<div>
    <div class="text-danger"> @ViewBag.Message</div>
</div>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Data" class="control-label"></label>
                <input asp-for="Data" class="form-control" />
                <span asp-validation-for="Data" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="HoraInicio" class="control-label"></label>
                <input asp-for="HoraInicio" class="form-control" />
                <span asp-validation-for="HoraInicio" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="HoraFim" class="control-label"></label>
                <input asp-for="HoraFim" class="form-control" />
                <span asp-validation-for="HoraFim" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EnfermeirosId" class="control-label"></label>
                <select asp-for="EnfermeirosId" class="form-control" asp-items="ViewBag.EnfermeirosId"></select>
            </div>
            <div class="form-group">
                <div class="checkbox">
                    <label>
                        <input asp-for="Troca" /> @Html.DisplayNameFor(model => model.Troca)
                    </label>
                </div>
            </div>
            <div class="form-group">
                <input type="submit" value="Gerar" class="btn btn-default" />
            </div>

            
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="btn btn-default" >Voltar a lista</a>
</div>

