@model IEnumerable<PI_ES2_Grupo8.Models.HorarioTrabalho>

@{
    ViewData["Title"] = "Index";
}

<h2>Gerar Horários</h2>

<p>
    <a asp-action="Create">Gerar Novo</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Data)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.HoraInicio)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.HoraFim)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Enfermeiros)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Troca)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Data)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.HoraInicio)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.HoraFim)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Enfermeiros.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Troca)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.HorarioTrabalhoId" class="btn btn-default" >Editar</a> |
                <a asp-action="Details" asp-route-id="@item.HorarioTrabalhoId" class="btn btn-default" >Detalhes</a> |
                <a asp-action="Delete" asp-route-id="@item.HorarioTrabalhoId" class="btn btn-default" >Eliminar</a>
            </td>
        </tr>
}
    </tbody>
</table>
