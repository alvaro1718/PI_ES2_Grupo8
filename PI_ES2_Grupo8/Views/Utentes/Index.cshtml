@model IEnumerable<PI_ES2_Grupo8.Models.Utente>

@{
    ViewData["Title"] = "Lista Utentes";
}

<h2>Lista Utentes</h2>

<p>
    <a asp-action="Create">Criar Utente</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Morada)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Telefone)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Descricao)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Morada)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Telefone)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Descricao)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.UtenteId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.UtenteId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.UtenteId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
