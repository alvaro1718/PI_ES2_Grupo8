@model PI_ES2_Grupo8.Models.Medico

@{
    ViewData["Title"] = "Apagar";
}


<div>
    <h4> Apagar Médico/a @Model.Nome</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Nome)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Nome)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Morada)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Morada)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Telefone)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Telefone)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Email)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Email)
        </dd>
    </dl>

    <!-- <form asp-action="Delete">
         <input type="hidden" asp-for="MedicoId" />
         <input type="submit" value="Delete" class="btn btn-default" /> |
         <a asp-action="Index">Back to List</a>
     </form>-->
    <style>
        #myDiv {
            display: none;
            margin-top: 5px;
        }
    </style>

    <div>
        <button type="button" class="btn btn-warning" onclick="myFunction()">Quero Apagar</button>
        <a asp-action="Index" class="btn btn-default">Lista Medicos</a>
    </div>

    <div id="myDiv">
        <form asp-action="Delete">
            <input type="hidden" asp-for="MedicoId" />
            <input type="submit" value="Apagar" class="btn btn-danger" onclick="return confirm('Tem a certeza que pretende Apagar?') " />
        </form>
    </div>
    <script>
        function myFunction() {
            var x = document.getElementById("myDiv");
            if (x.style.display === "none") {
                x.style.display = "block";
            } else {
                x.style.display = "none";
            }
        }
    </script>

</div>
