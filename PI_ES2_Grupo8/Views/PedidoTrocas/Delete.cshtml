@model PI_ES2_Grupo8.Models.Troca

@{
    ViewData["Title"] = "Delete";
}

<h2>Eliminação de um pedido</h2>

<h3>Tens a Certeza queres apagar este item?</h3>
<div>
    
    <hr />
    <dl class="dl-horizontal">
        <dt>
           Justificação
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Justificação)
        </dd>
        <dt>
            Enfermeiro Requerente
        </dt>
        <dd>
            @Html.DisplayFor(model => model.EnfermeiroRequerente.Nome)
        </dd>
        <dt>
            Enfermeiro Escolhido
        </dt>
        <dd>
            @Html.DisplayFor(model => model.EnfermeiroEscolhido.Nome)
        </dd>
        <dt>
            Data
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Data)
        </dd>
        <dt>
           Hora a trocar
        </dt>
        <dd>
            @Html.DisplayFor(model => model.HorarioTrabalhoNovo.HoraInicio)
        </dd>
        <dt>
            Hora Actual
        </dt>
        <dd>
            @Html.DisplayFor(model => model.HorarioTrabalhoAntigo.HoraInicio)
        </dd>
        <dt>
            Aprovação
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Aprovar)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="TrocaId" />
        <input type="submit" value="Delete" class="btn btn-default" onclick="return confirm('Tem a certeza que pretende Apagar?')"/> |
        <a asp-action="Index" class="btn btn-default">Voltar</a>
    </form>
</div>
