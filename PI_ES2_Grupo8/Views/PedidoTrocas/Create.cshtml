@model PI_ES2_Grupo8.Models.Troca

@{
    ViewData["Title"] = "Create";
}

<h2>Criar um Novo Pedido de Troca</h2>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Justificação" class="control-label"></label>
                <input asp-for="Justificação" class="form-control" />
                <span asp-validation-for="Justificação" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EnfermeirosId" class="control-label">Enfermeiro Requerente</label>
                <select asp-for="EnfermeirosId" class="form-control" asp-items="ViewBag.EnfermeirosId"></select>
            </div>
            <div class="form-group">
                <label asp-for="EnfermeirosEId" class="control-label">Enfermeiro Escolhido</label>
                <select asp-for="EnfermeirosEId" class="form-control" asp-items="ViewBag.EnfermeirosEId"></select>
            </div>
            <div class="form-group">
                <label asp-for="Data" class="control-label"></label>
                <input asp-for="Data" class="form-control" />
                <span asp-validation-for="Data" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="HorarioTrabalhoAntigoId" class="control-label">Horario Atual</label>
                <select asp-for="HorarioTrabalhoAntigoId" class="form-control" asp-items="ViewBag.HorarioTrabalhoAntigoId"></select>
            </div>
            <div class="form-group">
                <label asp-for="HorarioTrabalhoId" class="control-label">Horario a Trocar</label>
                <select asp-for="HorarioTrabalhoId" class="form-control" asp-items="ViewBag.HorarioTrabalhoId"></select>
            </div>

            @if (User.IsInRole("Administrator"))
            {
                <div class="form-group">
                    <div class="checkbox">
                        <label>
                            <input asp-for="Aprovar" /> @Html.DisplayNameFor(model => model.Aprovar)
                        </label>
                    </div>
                </div>
            }
            <div class="form-group">
                <input type="submit" value="Criar" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" value="Voltar" class="btn btn-default">Voltar a lista</a>
</div>

