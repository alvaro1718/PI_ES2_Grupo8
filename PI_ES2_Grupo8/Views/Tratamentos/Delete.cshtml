@model PI_ES2_Grupo8.Models.Tratamento

@{
    ViewData["Title"] = "Apagar Tratamento";
}



<h3>Tem certeza que pretende apagar?</h3>
<div>

    <hr />
    <dl class="dl-horizontal">
        <dt>
            <p>Tratamento</p>
        </dt>
        <dd>
            @Html.DisplayFor(model => model.TipodeTratamento)
        </dd>
    </dl>

    <!-- <form asp-action="Delete">
         <input type="hidden" asp-for="TratamentoId" />
         <input type="submit" value="Apagar" class="btn btn-default" /> |
         <a asp-action="Index">Voltar</a>
     </form>-->
    <style>
        #myDiv {
            display: none;
            margin-top: 5px;
        }
    </style>

    <div>
        <button type="button" class="btn btn-warning" onclick="myFunction()">Quero Apagar</button>
        <a asp-action="Index" class="btn btn-default">Lista Tratamentos</a>
    </div>

    <div id="myDiv">
        <form asp-action="Delete">
            <input type="hidden" asp-for="TratamentoId" />
            <input type="submit" value="Apagar" class="btn btn-danger" onclick="return confirm('Tem a certeza que pretende Apagar?') " />
        </form>
    </div>
    <script>
        function myFunction() {
            var x = document.getElementById("myDiv");
            if (x.style.display === "none") {
                x.style.display = "block";
            } else {
                x.style.display = "none";
            }
        }
    </script>

</div>
