@model IEnumerable<PI_ES2_Grupo8.Models.Tratamento>

@{
    ViewData["Title"] = "Lista Tratamentos";
}


<h4>Lista Tratamentos</h4>
<div class="form-group">
    <a asp-action="Create"><input type="button" value="Criar novo" class="btn btn-default" /></a>
</div>
<!--<p><a asp-action="Create">Criar novo</a></p>-->
<table class="table">
    <thead>
        <tr>
            <th>
                <p>Tratamentos</p>
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.TipodeTratamento)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.TratamentoId">Editar</a> |
                    <a asp-action="Details" asp-route-id="@item.TratamentoId">Detalhes</a> |
                    <a asp-action="Delete" asp-route-id="@item.TratamentoId">Apagar</a>
                </td>
            </tr>
        }
    </tbody>
</table>
